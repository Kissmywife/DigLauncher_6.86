<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextTopBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/topbarMarging10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSizeTopbar</item>
    </style>

    <style name="ImageTopbar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/topbarImageHeight</item>
        <item name="android:layout_width">@dimen/topbarImageWidth</item>
        <item name="android:layout_marginRight">@dimen/topbarMarging10</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/textNull</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textWeekDataSize</item>
    </style>
    <!-- 以上为通用-->

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">204px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_marginTop">52px</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainLayout2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">204px</item>
        <item name="android:layout_marginLeft">4px</item>
        <item name="android:layout_marginRight">4px</item>
        <item name="android:layout_marginTop">52px</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SecondLayout">
        <item name="android:background">@drawable/item_press</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="IconImage">
        <item name="android:layout_width">104px</item>
        <item name="android:layout_height">104px</item>
        <item name="android:layout_marginTop">@dimen/marging30</item>
    </style>

    <style name="IconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/topbarMarging10</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textView1SizeTop</item>
    </style>

</resources>
